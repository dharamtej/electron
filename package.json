{
  "name": "quesmatrix-print-application",
  "version": "1.0.3",
  "description": "SVKM Print Application",
  "main": "main.js",
  "author": "Excel India Pvt Ltd",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },

    "repository":  "https://github.com/dharamtej/electron",
    "publish": {
      "provider": "github",
      "releaseType": "release"
  },

  "keywords": [
    "electron",
    "react",
    "printing",
    "desktop-app",
    "exam"
  ],

  "devDependencies": {
    "@types/electron": "^1.4.38",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },

  "dependencies": {
    "electron-updater": "^6.3.9"
  },

  "build": {
    "appId": "com.excelindia.QuesmatrixPrint",
    "productName": "Quesmatrix Print",

    "directories": {
      "output": "dist"
    },

    "files": [
      "main.js",
      "preload.js",
      "my-app/build/**/*",
      "ExcelAssess.OfflinePrintExams.UI-main/build/**/*",
      "package.json"
    ],

    "publish": [
      {
        "provider": "github",
        "owner": "dharamtej",
        "repo": "electron",
        "private": true
      }
    ],

    "win": {
      "target": "nsis",
      "icon": "assets/svkm.ico"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Quesmatrix Print"
    }
  }
}
